<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import java.net.*?>

<AnchorPane id="AnchorPane" maxHeight="800" maxWidth="600" fx:id="launch_pane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.launchController">
   <VBox alignment="CENTER" spacing="30" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
      <padding>
         <Insets top="20" right="20" bottom="20" left="20" />
      </padding>
      <VBox alignment="CENTER" spacing="10">
         <Label fx:id="titleLabel" text="Rhythm Reader"/>
         <ImageView fitWidth="400" fitHeight="150">
            <image>
               <Image url="@images/logo.png" preserveRatio="true" />
            </image>
         </ImageView>
      </VBox>

   

      <VBox alignment="CENTER" spacing="100">
      <padding>
         <Insets top="30" right="20" bottom="20" left="20" />
      </padding>
         <Button fx:id="loginButton" prefWidth="365" prefHeight="73" onAction="#onLoginButtonClicked" text="Login" />
         <Button fx:id="signUpButton" prefWidth="365" prefHeight="73" onAction="#onSignupClicked" text="Create Account" />
      </VBox>
   </VBox>
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
</AnchorPane>
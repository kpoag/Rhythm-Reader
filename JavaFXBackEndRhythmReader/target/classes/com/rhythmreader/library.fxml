<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.controllers.libraryController" padding="20 20 20 20">
    
    <HBox spacing="10">
        <TextField fx:id="searchField" promptText="Search music..." />
        <Button fx:id="searchButton" text="Search" onAction="#searchMusic" />
    </HBox>

    <Button fx:id="addMusicButton" text="Add New Music" onAction="#addMusic" />

    <ListView fx:id="musicListView" prefHeight="200.0" onMouseClicked="#showMusicDetails" />

    <VBox fx:id="musicDetailsContainer" spacing="5">
        <Label text="Select a song to see details." />
    </VBox>

</VBox>

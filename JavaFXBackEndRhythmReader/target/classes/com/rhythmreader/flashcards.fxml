<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.controllers.flashcardsController">

    <Label fx:id="flashcardLabel" text="Welcome to Flashcards!" styleClass="flashcard-label" />

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="nextButton" text="Next Card" onAction="#nextFlashcard" styleClass="action-button" />
        <Button fx:id="showAnswerButton" text="Show Answer" onAction="#showAnswer" styleClass="action-button" />
    </HBox>

    <ComboBox fx:id="categorySelector" prefWidth="150" />

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

</VBox>

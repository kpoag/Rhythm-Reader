<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import java.net.*?>

<AnchorPane id="AnchorPane" fx:id="dashboard_pane" maxHeight="800.0" maxWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.userDashboardController">

    <!-- Left sidebar with stacked title -->
    <VBox prefWidth="220" styleClass="sidebar" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <padding>
            <Insets top="20" right="10" bottom="20" left="10" />
        </padding>
        
        <!-- Stacked title elements -->
        <VBox alignment="TOP_LEFT" spacing="5">
            <Label fx:id="titleLabel" text="Rhythm" styleClass="title-label" />
            <Label text="Reader" styleClass="title-label" />
            <Label fx:id="subtitleLabel" text="Learn Music Fundamentals!" styleClass="subtitle-label" wrapText="true" />
        </VBox>
        
        <!-- Progress bar with padding -->
        <VBox spacing="5" alignment="TOP_LEFT">
            <padding>
                <Insets top="20" right="0" bottom="10" left="0" />
            </padding>
            <Label fx:id="progressLabel" text="Progress:" styleClass="progressLabel" />
            <ProgressBar fx:id="progress" prefWidth="160" progress="0.4" styleClass="progressBar" />
        </VBox>
    </VBox>

    <!-- Main content area -->
    <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="transparent-scroll-pane" 
                AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="180.0" 
                AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <content>
            <GridPane fx:id="featureGrid" hgap="20" vgap="20" alignment="CENTER">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20" />
                </padding>
                
                <!-- First Row: 3 tiles -->
                <Button fx:id="flashcardsButton" text="Flashcards&#10;Learn music fundamentals" 
                        styleClass="dashboard-tile, flashcard-color" onAction="#onFlashcardsClicked" 
                        GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                
                <Button fx:id="pianoButton" text="Piano&#10;Play" 
                        styleClass="dashboard-tile, piano-color" onAction="#onPianoClicked" 
                        GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                
                <Button fx:id="composeButton" text="Compose&#10;Create or edit sheet music" 
                        styleClass="dashboard-tile, compose-color" onAction="#onComposeClicked" 
                        GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                
                <!-- Second Row: 3 tiles -->
                <Button fx:id="libraryButton" text="Library&#10;Browse the song library" 
                        styleClass="dashboard-tile, library-color" onAction="#onLibraryClicked" 
                        GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                     
                <Button fx:id="homeworkButton" text="Homework&#10;View course grades and work" 
                        styleClass="dashboard-tile, homework-color" onAction="#onHomeworkClicked" 
                        GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                
                <Button fx:id="friendsButton" text="Friends&#10;Add and manage friends" 
                        styleClass="dashboard-tile, friends-color" onAction="#onFriendsClicked" 
                        GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            </GridPane>
        </content>
    </ScrollPane>

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import java.net.*?>


<AnchorPane id="AnchorPane" prefHeight="430" prefWidth="932" fx:id="launch_pane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.userDashboardController">
      <Label fx:id="welcomeLabel" layoutX="33.0" layoutY="20.0" text="Welcome back, " />
      <Button fx:id="profileButton" layoutX="380" layoutY= "20"  onAction="#onProfileClicked" text="" />
      <Button fx:id="titleLabel" layoutX="100" layoutY= "60" text="Rhythm Reader" />
      <ScrollPane layoutX="30" layoutY="200" fitToWidth="true" prefViewportHeight="400" prefViewportWidth="872" hbarPolicy="NEVER">
          <GridPane fx:id="grid" alignment="CENTER" hgap="40" vgap="40">
              <!-- Row 1 -->
              <Button fx:id="flashcardsButton" text="Flashcards&#10;Learn music fundamentals" styleClass="dashboard-tile" onAction="#onFlashcardsClicked" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
              <Button fx:id="pianoButton" text="Piano&#10;Play" styleClass="dashboard-tile" onAction="#onPianoClicked" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
              <!-- Row 2 -->
              <Button fx:id="composeButton" text="Compose&#10;Create or edit sheet music" styleClass="dashboard-tile" onAction="#onComposeClicked" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
              <Button fx:id="libraryButton" text="Library&#10;Browse the song library" styleClass="dashboard-tile" onAction="#onLibraryClicked" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
              <!-- Row 3 -->
              <Button fx:id="homeworkButton" text="Homework&#10;View course grades and work" styleClass="dashboard-tile" onAction="#onHomeworkClicked" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
              <Button fx:id="friendsButton" text="Friends&#10;Add and manage friends" styleClass="dashboard-tile" onAction="#onFriendsClicked" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
          </GridPane>
      </ScrollPane>
     <stylesheets>
        <URL value="@styles.css" />
     </stylesheets>
</AnchorPane>
